<?xml version="1.0" encoding="utf-8"?>
<!-- see http://developer.android.com/guide/topics/resources/drawable-resource.html#Bitmap -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true" android:state_pressed="true">
		<layer-list>
			<item>
		        <shape>
		            <gradient
		                android:startColor="#dddcdd"
		                android:endColor="#c9c8c9"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#999999" />
		            <corners
		                android:radius="2dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/disagree_checked_pressed" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
	<item android:state_checked="false" android:state_pressed="true">
