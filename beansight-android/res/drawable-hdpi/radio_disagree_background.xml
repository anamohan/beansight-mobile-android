<?xml version="1.0" encoding="utf-8"?>
<!-- see http://developer.android.com/guide/topics/resources/drawable-resource.html#Bitmap -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true" android:state_pressed="true">
		<layer-list>
			<item>
		        <shape>
   					<!-- grey + red-ish -->
		            <gradient
		                android:startColor="#b68c8c"
		                android:endColor="#aa5e5e"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#aa5e5e" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/disagree" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
