<?xml version="1.0" encoding="utf-8"?>
<!-- see http://developer.android.com/guide/topics/resources/drawable-resource.html#Bitmap -->

<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true" android:state_pressed="true">
		<layer-list>
			<item>
		        <shape>
					<!-- grey + green-ish -->
		            <gradient
		                android:startColor="#a6b68e"
		                android:endColor="#8aab5b"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#8aab5b" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />					
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_checked_pressed" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
	<item android:state_checked="false" android:state_pressed="true">
		<layer-list>
			<item>
		        <shape>
					<!-- light green -->
		            <gradient
		                android:startColor="#a6b68e"
		                android:endColor="#84c22b"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#84c22b" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_notchecked_pressed" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
	<item android:state_checked="true" android:state_focused="true">
		<layer-list>
			<item>
		        <shape>
		            <gradient
		                android:startColor="#95ad6f"
		                android:endColor="#789351"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#789351" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_checked_focused" android:gravity="center"></bitmap>
			</item>
		</layer-list>	
	</item>

	<!-- same as pressed, but less intense -->	
	<item android:state_checked="false" android:state_focused="true">
		<layer-list>
			<item>
		        <shape>
		            <gradient
		                android:startColor="#9ec75c"
		                android:endColor="#6b9a27"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#6b9a27" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_notchecked_focused" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
	<item android:state_checked="true">
		<layer-list>
			<item>
		        <shape>
		            <gradient
		                android:startColor="#8eb157"
		                android:endColor="#638b2a"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#638b2a" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_checked" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
	
	<item android:state_checked="false">
		<layer-list>
			<item>
		        <shape>
		            <gradient
		                android:startColor="#dddcdd"
		                android:endColor="#c9c8c9"
		                android:angle="270" />
		            <stroke
		                android:width="1dp"
		                android:color="#999999" />
		            <corners
		                android:radius="1dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
			</item>
			<item>
				<bitmap android:src="@drawable/agree_notchecked" android:gravity="center"></bitmap>
			</item>
		</layer-list>
	</item>
</selector>
